<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:id="@+id/attachment_info_lv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="10dip"
		android:orientation="vertical"
		android:visibility="gone">

		<TextView
			android:id="@+id/attachment_title_tv"
			style="@style/TextAppearance.Normal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/adaptor_phone_tv"
			style="@style/TextAppearance.Normal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_product_detail_desc_container"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/attachment_info_lv"
		android:layout_marginTop="10dip">

		<WebView
			android:id="@+id/wv_product_detail_desc"
			android:layout_width="fill_parent"
			android:layout_height="match_parent" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_f_subscribe_container"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_f_buy_btn"
			style="@style/Widget.Button.Main"
			android:layout_width="0.0dip"
			android:layout_height="45.0dip"
			android:layout_weight="2"
			android:text="@string/f_buy" />

		<Button
			android:id="@+id/btn_subscribe"
			style="@style/Widget.Button.Main"
			android:layout_width="0.0dip"
			android:layout_height="45.0dip"
			android:layout_weight="3"
			android:text="@string/subscriber" />
	</LinearLayout>

</RelativeLayout>