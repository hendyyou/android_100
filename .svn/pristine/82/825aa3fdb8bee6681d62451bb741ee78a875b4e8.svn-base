<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:background="@android:color/white"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
	    android:gravity="center"
	    android:orientation="vertical"
	    android:layout_alignParentTop="true"
	    android:background="@color/link_text"
	    android:id="@+id/ll_product_detail_desc_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <WebView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/wv_product_detail_desc" />
    </LinearLayout>
    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:id="@+id/fl_product_detail_btns_container">
	    <LinearLayout
		    android:orientation="horizontal"
		    android:id="@+id/ll_immd_favorite_container"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
	        <Button
		        android:id="@+id/btn_f_buy"
		        android:layout_width="0dp"
		        android:layout_height="45.0dip"
		        android:layout_weight="1"
				android:text="@string/f_buy"
		        style="@style/Widget.Button.Main" />
		    <Button
			    android:id="@+id/btn_immd_buy_btn"
			    android:layout_width="0dp"
			    android:layout_height="45.0dip"
			    android:layout_weight="3"
			    android:text="@string/immd_buy"
			    style="@style/Widget.Button.Main" />
	    </LinearLayout>
        <LinearLayout
	        android:orientation="horizontal"
	        android:id="@+id/ll_f_subscribe_container"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
            <Button
	            android:id="@+id/btn_f_buy_btn"
	            android:layout_width="0.0dip"
	            android:layout_height="45.0dip"
	            android:layout_weight="2"
	            android:text="@string/f_buy"
	            style="@style/Widget.Button.Main" />
            <Button
	            android:id="@+id/btn_subscribe"
	            android:layout_width="0.0dip"
	            android:layout_height="45.0dip"
	            android:layout_weight="3"
	            android:text="@string/subsciter"
	            style="@style/Widget.Button.Main" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>