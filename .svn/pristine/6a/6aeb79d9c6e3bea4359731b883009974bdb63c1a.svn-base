package cn.digione.yibaic.shop.widget;import android.app.Dialog;import android.content.Context;import android.view.View;import android.view.ViewGroup;import android.widget.Button;import android.widget.ImageView;import android.widget.TextView;import cn.digione.yibaic.shop.R;/** * Created with IntelliJ IDEA. * User: youzh * Date: 14-3-5 * Time: 上午9:52 */public class BaseAlertDialog extends Dialog {    public static final int BUTTON_NEGATIVE = R.id.btn_negative;    public static final int BUTTON_POSITIVE = R.id.btn_positive;    private View mButtonPadding;    private android.view.View.OnClickListener mCloseListener;    private ImageView mIcon;    private TextView mMessage;    private Button mNegativeBtn;    public Button mPositiveBtn;    private TextView mTitle;    private class OnClickListenerWrapper implements android.view.View.OnClickListener {        public void onClick(View view) {            dismiss();            if (mListener != null) {                mListener.onClick(view);            }        }        private android.view.View.OnClickListener mListener;        public OnClickListenerWrapper(android.view.View.OnClickListener onclicklistener) {            mListener = onclicklistener;        }    }    public BaseAlertDialog(Context context) {        super(context, R.style.Widget_Dialog);        setContentView(R.layout.base_dialog);        mCloseListener = new android.view.View.OnClickListener() {            public void onClick(View view) {                dismiss();            }        };        mTitle = (TextView) findViewById(R.id.tv_title);        mIcon = (ImageView) findViewById(R.id.iv_icon);        mMessage = (TextView) findViewById(R.id.tv_message);        mPositiveBtn = (Button) findViewById(R.id.btn_positive);        mNegativeBtn = (Button) findViewById(R.id.btn_negative);        mButtonPadding = findViewById(R.id.v_button_padding);    }    public void setIcon(int i) {        mIcon.setVisibility(View.VISIBLE);        mIcon.setImageResource(i);    }    public void setMessage(int i) {        setMessage(((CharSequence) (getContext().getString(i))));    }    public void setMessage(CharSequence charsequence) {        mMessage.setVisibility(View.VISIBLE);        mMessage.setText(charsequence);    }    public void setNegativeButton(int i, android.view.View.OnClickListener onclicklistener) {        mNegativeBtn.setVisibility(View.VISIBLE);        if (mPositiveBtn.getVisibility() == View.VISIBLE) {            mButtonPadding.setVisibility(View.VISIBLE);        }        if (i > 0) {            mNegativeBtn.setText(i);        }        if (onclicklistener != null) {            mNegativeBtn.setOnClickListener(new OnClickListenerWrapper(onclicklistener));        } else {            mNegativeBtn.setOnClickListener(mCloseListener);        }    }    public void setPositiveButton(int i, android.view.View.OnClickListener onclicklistener) {        mPositiveBtn.setVisibility(View.VISIBLE);        if (mNegativeBtn.getVisibility() == View.VISIBLE) {            mButtonPadding.setVisibility(View.VISIBLE);        }        if (i > 0) {            mPositiveBtn.setText(i);        }        if (onclicklistener != null) {            mPositiveBtn.setOnClickListener(new OnClickListenerWrapper(onclicklistener));        } else {            mPositiveBtn.setOnClickListener(mCloseListener);        }    }    public void setPositiveButton(int i, android.view.View.OnClickListener onclicklistener, boolean flag) {        mPositiveBtn.setVisibility(View.VISIBLE);        if (mNegativeBtn.getVisibility() == View.VISIBLE) {            mButtonPadding.setVisibility(View.VISIBLE);        }        if (i > 0) {            mPositiveBtn.setText(i);        }        if (onclicklistener != null) {            if (flag) {                mPositiveBtn.setOnClickListener(new OnClickListenerWrapper(onclicklistener));            } else {                mPositiveBtn.setOnClickListener(onclicklistener);            }        } else {            mPositiveBtn.setOnClickListener(mCloseListener);        }    }    public void setTitle(int i) {        mTitle.setVisibility(0);        mTitle.setText(i);    }    public void setView(View view) {        ViewGroup viewgroup = (ViewGroup) findViewById(R.id.sv_content);        viewgroup.removeAllViews();        viewgroup.addView(view);    }}