<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:paddingBottom="@dimen/home_cellspacing"
	android:background="@drawable/product_item_bg"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	style="@style/Widget.Item.ListView"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
	    android:orientation="horizontal"
	    android:id="@+id/rl_product_container"
	    android:layout_width="fill_parent"
	    android:layout_height="125.0dip">
        <ImageView
	        android:id="@+id/iv_product_image"
	        android:paddingLeft="5.0dip"
	        android:paddingRight="5.0dip"
	        android:paddingBottom="5.0dip"
	        android:focusable="false"
	        android:clickable="false"
	        android:layout_width="105.0dip"
	        android:layout_height="105.0dip"
	        android:scaleType="fitXY"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:contentDescription="@null" />
        <LinearLayout
	        android:orientation="vertical"
	        android:id="@+id/tv_product_text_container"
	        android:paddingTop="6.0dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_product_image"
	        android:layout_centerVertical="true">
            <RelativeLayout
	            android:orientation="horizontal"
	            android:paddingBottom="2.5dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
                <TextView
	                android:gravity="center"
	                android:id="@+id/tv_product_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                style="@style/TextAppearance.List.Large" />
                <TextView
	                android:textColor="@color/highlight_text_color"
	                android:gravity="center"
	                android:id="@+id/tv_product_price"
	                android:paddingLeft="10.0dip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/tv_product_name"
	                style="@style/TextAppearance.List.Large" />
            </RelativeLayout>
            <TextView
	            android:textColor="@color/secondary_text_color"
	            android:id="@+id/tv_product_description"
	            android:paddingBottom="2.5dip"
	            android:layout_width="185.0dip"
	            android:layout_height="wrap_content"
	            style="@style/TextAppearance.Small" />
            <TextView
	            android:textColor="@color/secondary_text_color"
	            android:id="@+id/tv_product_activity_description"
	            android:layout_width="190.0dip"
	            android:layout_height="wrap_content"
	            style="@style/TextAppearance.Small" />
            <TextView
	            android:textColor="@color/secondary_text_color"
	            android:id="@+id/tv_product_activity_description2"
	            android:layout_width="190.0dip"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            style="@style/TextAppearance.Small" />
        </LinearLayout>
        <ImageView
	        android:id="@+id/iv_arrow_right"
	        android:focusable="false"
	        android:clickable="false"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_next"
	        android:scaleType="centerInside"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    <FrameLayout
	    android:id="@+id/fl_buy_operation_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:layout_below="@+id/rl_product_container">
        <Button
	        android:id="@+id/btn_immd_buy_btn"
	        android:background="@drawable/btn_productlist_bg"
	        android:layout_width="fill_parent"
	        android:layout_height="45.0dip"
	        style="@style/Widget.Button" />
        <LinearLayout
	        android:orientation="horizontal"
	        android:id="@+id/ll_buy_container"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
            <Button
	            android:id="@+id/btn_f_buy_btn"
	            android:background="@drawable/btn_productlist_bg"
	            android:layout_width="0.0dip"
	            android:layout_height="45.0dip"
	            android:layout_weight="1.0"
	            style="@style/Widget.Button" />
            <Button
	            android:id="@+id/btn_subsciter_btn"
	            android:background="@drawable/btn_productlist_bg"
	            android:layout_width="0.0dip"
	            android:layout_height="45.0dip"
	            android:layout_weight="1.0"
	            style="@style/Widget.Button" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
