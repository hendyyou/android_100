<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/ll_category_container"
	android:minHeight="@dimen/category_image_total_height">
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:id="@+id/iv_category_goods_photo"
		android:layout_gravity="bottom|center"
		android:paddingLeft="1.0px"
		android:paddingTop="1.0px"
		android:paddingRight="1.0px"
		android:focusable="false"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
		android:layout_weight="5.9"/>
	<TextView
		android:id="@+id/tv_category_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|left"
		android:singleLine="true"
		android:layout_weight="0.8"
		android:textColor="@color/category_text_color"
		android:background="@color/category_text_backgroundr"
		style="@style/TextAppearance.List.Large" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="@dimen/category_image_item"
		android:gravity="center"
		android:singleLine="true"
		android:layout_weight="0.3" />
</LinearLayout>