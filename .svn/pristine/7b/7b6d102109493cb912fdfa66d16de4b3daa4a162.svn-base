<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="20dp">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/TextAppearance.List.Primary"
		android:text="@string/f_ma_buy_hint" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:id="@+id/et_f_ma_input"
		android:hint="@string/f_ma_buy_input_hint"
		style="@style/Widget.EditText" />
	<Button
		android:gravity="center"
		android:id="@+id/btn_f_ma_submit"
		android:layout_width="match_parent"
		android:layout_height="45.0dip"
		android:text="@string/submit"
		android:layout_marginTop="12dp"
		style="@style/Widget.Button.Main" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/tv_f_ma_obtain" />

</LinearLayout>