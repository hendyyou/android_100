<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	android:id="@+id/ll_input_coupon_container"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
	    android:orientation="vertical"
	    android:id="@+id/ll_input_coupon_title_container"
	    android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
        <TextView
	        android:textSize="@dimen/text_size_medium"
	        android:id="@+id/tv_input_coupon_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/coupon_input_titile"
	        style="@style/TextAppearance.List.Primary" />
        <EditText
	        android:id="@+id/et_coupon_input"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dip"
	        android:hint="@string/coupon_input_prompt"
	        style="@style/Widget.EditText" />
    </LinearLayout>
    <Button
	    android:gravity="center"
	    android:id="@+id/btn_coupon"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10.0dip"
	    android:text="@string/coupon_btn"
	    style="@style/Widget.Button.Main" />
</LinearLayout>