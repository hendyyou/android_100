<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activities_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/category_image_total_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_activities_pic"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="bottom|center"
        android:layout_weight="5.9"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:paddingLeft="1.0px"
        android:paddingRight="1.0px"
        android:paddingTop="1.0px"
        android:scaleType="fitXY" />

</LinearLayout>