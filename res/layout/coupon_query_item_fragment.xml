<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_relative_layout"    
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    style="@style/Widget.Item.ListView.MutiLine"
    android:background="@drawable/service_item_text_bg">

    <LinearLayout
        android:id="@+id/coupon_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/coupon_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_padding"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_code_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_code" />

            <TextView
                android:id="@+id/coupon_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_denomination_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denomination" />

            <TextView
                android:id="@+id/coupon_denomination_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_staus_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_status_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_status"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/coupon_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_use_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_use_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_use"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/coupon_use_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_uselimit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_use_limit_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_use_limit"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/coupon_use_limit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_padding"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/coupon_time_limit_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_time_limit"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/coupon_time_limit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_toRightOf="@id/coupon_content_layout"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:text="@string/copy_to_clipboard" />
    </LinearLayout>

</RelativeLayout>